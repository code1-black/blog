<div class="w-full h-20  p-4 bg-gray-900 z-50 fixed top-0">
	<div class=" max-w-7xl flex justify-between items-center w-full h-full px-8 mx-auto">
		<div>
		<h1 class="text-5xl text-gray-200"> Aproko<span class="text-red-400">TV</span></h1>
	 </div>
	
		<%= form_with url:search_posts_path, method: :get, local: true, class:"flex gap-2 p-4 bg-gray-100 rounded-xl" do %>
        <%= text_field_tag :query, params[:query], placeholder:"search blog posts... ", class:"border px-2 py-1 rounded-lg" %>
        <%= submit_tag "search", class:"bg-gray-500 text-white px-3 py-1 rounded-lg " %>
	 <%end %>
	
	
	<div class=" flex  items-center gap-3 px-4">
		<%if current_user%>
		  <%= button_to "Log out", destroy_user_session_path, method: :delete,  class: "w-full rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "delete"} %>
		  <%= link_to "Home", posts_path , class:"text-gray-200"%>
		<%= link_to "Myposts", myposts_posts_path , class:"text-gray-200 border-b-2 "%>
		<%else%>
		
			<%= link_to "Sign in ", new_user_session_path , class:"text-gray-200 border-b-2 "%>
           <%= link_to "Sign up ", new_user_registration_path , class:"text-gray-200 border-b-2 "%>
		
		
		<%end%>
		
        
	</div>
	</div>
	
</div>