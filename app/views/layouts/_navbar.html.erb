<div class="w-full h-auto p-2 bg-gray-900 z-50 fixed top-0">
  <div class="max-w-7xl flex flex-col sm:flex-row justify-between items-center w-full px-2 sm:px-8 mx-auto">
    <!-- Logo -->
    <div class="mb-2 sm:mb-0">
      <h1 class="text-3xl sm:text-5xl text-gray-200">Aproko<span class="text-red-400">TV</span></h1>
    </div>

    <!-- Search Bar -->
    <div class="w-full sm:w-auto mb-2 sm:mb-0">
      <%= form_with url: search_posts_path, method: :get, local: true, class: "flex flex-col sm:flex-row gap-2 bg-gray-100 rounded-xl p-2 sm:p-4" do %>
        <%= text_field_tag :query, params[:query], placeholder: "search blog posts...", class: "border px-2 py-1 rounded-lg w-full sm:w-auto" %>
        <%= submit_tag "search", class: "bg-gray-500 text-white px-3 py-1 rounded-lg w-full sm:w-auto" %>
      <% end %>
    </div>

    <!-- Nav Links -->
    <div class="flex flex-col sm:flex-row items-center gap-2 sm:gap-3 w-full sm:w-auto px-0 sm:px-4">
      <% if current_user %>
        <%= button_to "Log out", destroy_user_session_path, method: :delete, class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "delete" } %>
        <%= link_to "Home", posts_path, class: "text-gray-200 w-full sm:w-auto text-center" %>
        <%= link_to "Myposts", myposts_posts_path, class: "text-gray-200 border-b-2 w-full sm:w-auto text-center" %>
      <% else %>
        <%= link_to "Sign in", new_user_session_path, class: "text-gray-200 border-b-2 w-full sm:w-auto text-center" %>
        <%= link_to "Sign up", new_user_registration_path, class: "text-gray-200 border-b-2 w-full sm:w-auto text-center" %>
      <% end %>
    </div>
  </div>
</div>